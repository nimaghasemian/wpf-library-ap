<Window x:Class="wpf_library.Sign_in_edit_info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_library"
        mc:Ignorable="d"
        Title="Sign_in_edit_info" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height='.5*'/>
                <RowDefinition/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height=".7*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Back" Margin="10,0,723.6,10" />
            <Label x:Name="lbl_siginin_title" Content="SIGN UP" FontSize="55" FontWeight="Bold" FontFamily="Showcard Gothic" Margin="277,39,278.2,0" Grid.RowSpan="2"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.7*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Name:" Margin="93,12,354,21.8" />
                    <TextBox Grid.Row="0" Margin="151,12,112,21.8" />
                    <Label Grid.Row="0" Margin="151,43,112,3.8"/>

                    <Label Grid.Row="1" Content="E_mail:" Margin="95,12.2,361,21.8"/>
                    <TextBox Grid.Row="1" Margin="151,12.2,112,21.8"/>
                    <Label Grid.Row="1" Margin="151,43.2,112,3.8"/>

                    <Label Grid.Row="2" Content="Phon number:" Margin="55,12.2,354,21.6"/>
                    <TextBox Grid.Row="2" Margin="151,12.2,112,21.6"/>
                    <Label Grid.Row="2" Margin="151,43.2,112,3.6"/>

                    <Label Grid.Row="3" Content="Password:" Margin="79,12.4,354,22.4"/>
                    <TextBox Grid.Row="3" Margin="151,12.4,112,22.4"/>
                    <Label Grid.Row="3" Margin="151,43.4,112,4.4"/>
                </Grid>

                <Image x:Name="imgPhoto" Grid.Column="1" Margin="76,10,60.6,73.4" Stretch="Fill" />
                <Button Content="Browse..." Grid.Column="1" Margin="76,187,99.6,10.4" Click="Button_Click_1"/>
            </Grid>

            <Button Grid.Row="3" Content="Billing page" BorderThickness="2"  Background="{x:Null}" BorderBrush="#FF0E0505" Margin="294,3.8,303.6,6" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
