<Window x:Class="Library.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="AddBook" Height="600" Width="480" ResizeMode="NoResize">

    <Grid Margin="0,0,-20,0">
        <Label Content="Add New Book" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" FontSize="45" Height="65"/>
        <TextBox Name="nameInput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" Height="22" Margin="0,126,0,0" />
        <TextBox Name="authorInput" HorizontalAlignment="Center" Margin="0,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" Height="22"/>
        <TextBox Name="ISBNInput" HorizontalAlignment="Center" Margin="0,199,0,0" VerticalAlignment="Top" Width="203" Height="22"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="33,126,0,0" VerticalAlignment="Top" Width="44"/>
        <Label Content="Author:" HorizontalAlignment="Left" Margin="33,161,0,0" VerticalAlignment="Top"/>
        <Label Content="ISBN:&#xD;&#xA;" HorizontalAlignment="Left" Margin="33,197,0,0" VerticalAlignment="Top"/>
        <TextBox Name="genreInput" HorizontalAlignment="Center" Margin="0,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="22"/>
        <Label Content="Genre:" HorizontalAlignment="Left" Margin="33,231,0,0" VerticalAlignment="Top"/>
        <Button Name="ctnButton" Content="Confirm" HorizontalAlignment="Center" Margin="0,316,0,0" VerticalAlignment="Top" Width="130" Height="30" Click="Button_Click_1"/>
        <Button Content="Cancel" HorizontalAlignment="Center" Margin="0,358,0,0" VerticalAlignment="Top" Width="89" Click="Button_Click"/>
        <Label Name="errorLabel" Foreground="Red" Content="" HorizontalAlignment="Center" Margin="0,397,0,0" VerticalAlignment="Top" Width="382" Height="67"/>

    </Grid>
</Window>
