<Window x:Class="Library.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="483" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Label Content="LOG IN&#xA;" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" FontSize="50" Height="65" FontFamily="Showcard Gothic"/>
            <ComboBox SelectedIndex="0" Name="userTypeInput" HorizontalAlignment="Center" VerticalAlignment="Top" Width="203" SelectionChanged="ComboBox_SelectionChanged" Margin="0,159,0,0" >
                <ComboBoxItem Visibility="Collapsed">Select your role...</ComboBoxItem>
                <ComboBoxItem Tag="A" Content="Manager"/>
                <ComboBoxItem Tag="E" Content="Employee"/>
                <ComboBoxItem Tag="M" Content="Member"/>
            </ComboBox>
            <TextBox Name="emailInput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" BorderThickness="0,0,0,1.5" Width="203" Height="22"/>
            <PasswordBox Name="passwordInput" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" BorderThickness="0,0,0,1.5" Width="203" Height="22"/>
            <Button Content="LOG IN" HorizontalAlignment="Center" Margin="0,322,0,0" VerticalAlignment="Top" Width="152" Height="46" Click="Button_Click" FontFamily="B Arash" FontWeight="Bold" FontSize="20"/>
            <Button  Name="joinButton" Visibility="Hidden" Content="Become a Member" HorizontalAlignment="Center" Margin="0,368,0,0" VerticalAlignment="Top" Width="152" Height="27" Click="Button_Click_1"/>
            <Label Content="Password:&#xA;" HorizontalAlignment="Left" Margin="71,272,0,0" VerticalAlignment="Top" Height="26"/>
            <Label Content="Email:" HorizontalAlignment="Left" Margin="71,0,0,0" VerticalAlignment="Center"/>
            <Label Name="passwordErrorLabel" Content="" HorizontalAlignment="Left" Margin="135,296,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.253,0.302" Width="203" FontSize="10" Foreground="Red"/>
            <Label Name="emailErrorLabel" Content="" HorizontalAlignment="Left" Margin="135,248,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.253,0.302" Width="203" FontSize="10" Foreground="Red"/>

        </Grid>
    </Grid>
</Window>
