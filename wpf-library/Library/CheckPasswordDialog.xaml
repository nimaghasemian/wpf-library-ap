<Window x:Class="Library.CheckPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="CheckPasswordDialog" Height="185" Width="400">
    <Grid Margin="0,0,0,-16">
        <PasswordBox PasswordChanged="passwordInput_PasswordChanged" Name="passwordInput"  HorizontalAlignment="Center" VerticalAlignment="Top" Width="216" Margin="0,47,0,0"/>
        <Label Content="Enter your password to complete the operation" HorizontalAlignment="Left" Margin="63,10,0,0" VerticalAlignment="Top" Width="264"/>
        <Button Name="cnfrmBtn" Content="Confirm" HorizontalAlignment="Left" Margin="100,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.144,0.278" Width="94" Height="26" Click="ConfirmPassword"/>
        <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="209,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.144,0.278" Width="94" Height="26" Click="Button_Click"/>
        <Label Name="errorLabel"  Foreground="Red" Content="" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" Height="17" Width="172"/>
    </Grid>
</Window>
