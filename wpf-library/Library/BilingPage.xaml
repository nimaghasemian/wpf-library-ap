
    <Window x:Class="Library.BilingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="BilingPage" Height="450" Width="800">


    <Grid>
        
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" Height="291" Margin="0,25,0,0" VerticalAlignment="Top" Width="700"/>

        <Label Content="Enter Your Card Information" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top" FontSize="40                "/>
        <TextBox HorizontalAlignment="Left" Margin="190,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="455" Height="34" TextChanged="TextBox_TextChanged" />
        <Label Content="Card Number:" HorizontalAlignment="Left" Margin="92,133,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="190,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="103" Height="34"/>
        <Label Content="CVV2:" HorizontalAlignment="Left" Margin="93,199,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Margin="190,261,0,0" VerticalAlignment="Top" Width="187" Height="34"/>
        <Label Content="Amount:" HorizontalAlignment="Left" Margin="93,366,0,0" VerticalAlignment="Top"/>
        <TextBox Name="amountTextBox"  HorizontalAlignment="Left" Margin="190,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="32" IsEnabled="False" Background="LightGreen" Text="" Padding="4,2,2,2" FontSize="18"/>
        <Button Content="Pay and Sign Up" HorizontalAlignment="Left" Margin="620,360,0,0" VerticalAlignment="Top" Height="32" Width="130"/>
        <Label Content="Expiry:" HorizontalAlignment="Left" Margin="333,199,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="439,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="42" Height="34"/>
        <TextBox HorizontalAlignment="Left" Margin="552,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="42" Height="34"/>
        <Label Content="Month:" HorizontalAlignment="Left" Margin="390,199,0,0" VerticalAlignment="Top"/>
        <Label Content="Year:" HorizontalAlignment="Left" Margin="512,199,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="92,265,0,0" VerticalAlignment="Top"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="475,360,0,0" VerticalAlignment="Top" Width="130" Height="32" Click="Button_Click"/>

    </Grid>
        
</Window>
